<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp"
    android:background="@drawable/xdialog_loading_bg2">

    <!-- 加载动画容器 -->
    <FrameLayout
        android:id="@+id/xdialog_loading_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- 通用图标容器 (用于显示图片或自定义Drawable) -->
        <ImageView
            android:id="@+id/xdialog_loading_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <!-- 自定义视图容器 (用于动态添加View) -->
        <FrameLayout
            android:id="@+id/xdialog_loading_custom_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />


        <!-- 进度条 -->
        <ProgressBar
            android:id="@+id/xdialog_loading_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/xdialog_loading_progress"
            android:visibility="gone"
            android:max="100"
            android:progress="0" />



    </FrameLayout>

    <!-- 加载文本 -->
    <TextView
        android:id="@+id/xdialog_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="加载中..."
        android:textColor="@color/x_dialog_btn_confirm_text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>