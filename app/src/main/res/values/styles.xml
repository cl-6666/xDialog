<resources>

    <style name="animate_dialog">
        <item name="android:windowEnterAnimation">@anim/enter_translate_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_translate_dialog</item>
    </style>

    <style name="animate_dialog_scale">
        <item name="android:windowEnterAnimation">@anim/enter_scale_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_scale_dialog</item>
    </style>

    <style name="animate_dialog_fade_scale">
        <item name="android:windowEnterAnimation">@anim/enter_fade_scale_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_fade_scale_dialog</item>
    </style>

    <style name="animate_dialog_slide_up">
        <item name="android:windowEnterAnimation">@anim/enter_slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_slide_down_dialog</item>
    </style>

    <style name="DatePickerStyle">
        <item name="wheelTextSize">24sp</item>
        <item name="wheelTextColor">#bdbdbd</item>
        <item name="wheelSelectedTextColor">#000000</item>
        <item name="wheelDividerColor">#D81B60</item>
    </style>

</resources>
